{
    "network_config": {
        "description": "网络请求设置",
        "type": "object",
        "hint": "在这里设置网络请求相关参数。",
        "items": {
            "proxy": {
                "description": "代理地址",
                "type": "string",
                "hint": "例如 http://127.0.0.1:7890，留空则尝试读取环境变量或直连。",
                "default": ""
            },
            "per_page": {
                "description": "单次检查数量",
                "type": "int",
                "hint": "每次检查更新时获取的文章数量。建议设置在 5-10 之间。",
                "default": 5
            },
            "interval": {
                "description": "发送间隔(秒)",
                "type": "int",
                "hint": "连续发送多条消息时的缓冲间隔。建议 2-5 秒。",
                "default": 2
            }
        }
    },
    "display_config": {
        "description": "展示与发送设置",
        "type": "object",
        "hint": "设置文章的展示样式及发送行为。",
        "items": {
            "show_thumbnail": {
                "description": "显示缩略图",
                "type": "bool",
                "default": true,
                "hint": "是否在推送卡片中显示文章封面图。"
            },
            "show_excerpt": {
                "description": "显示摘要",
                "type": "bool",
                "default": true,
                "hint": "是否显示文章的简短摘要（会自动翻译为中文）。"
            },
            "show_author": {
                "description": "显示作者",
                "type": "bool",
                "default": true,
                "hint": "是否显示作者名称及头像。"
            },
            "fold": {
                "description": "合并转发阈值",
                "type": "int",
                "default": 2,
                "hint": "当单次更新的文章数量 > 此值时，自动折叠为合并转发消息。"
            }
        }
    },
    "monitor_config": {
        "description": "自动监控设置",
        "type": "object",
        "hint": "设置定时自动检查更新。",
        "items": {
            "enabled": {
                "description": "开启监控",
                "type": "bool",
                "default": false,
                "hint": "开启后将定时检查新文章。"
            },
            "receiver": {
                "description": "接收者设置",
                "type": "object",
                "hint": "指定自动推送的目标（仅支持 OneBot 协议）。",
                "items": {
                    "groups": {
                        "description": "推送到群聊",
                        "type": "list",
                        "hint": "点击“添加更多”输入群号。"
                    },
                    "users": {
                        "description": "推送到私聊",
                        "type": "list",
                        "hint": "点击“添加更多”输入 QQ 号。"
                    }
                }
            },
            "interval": {
                "description": "检查周期(秒)",
                "type": "int",
                "default": 300,
                "hint": "每隔多少秒检查一次新文章。"
            }
        }
    },
    "filter_config": {
        "description": "内容过滤器",
        "type": "object",
        "hint": "设置过滤规则。",
        "items": {
            "keywords": {
                "description": "包含关键词",
                "type": "list",
                "hint": "文章标题或摘要中包含列表中任意一个词即推送。"
            },
            "exclude_keywords": {
                "description": "排除关键词",
                "type": "list",
                "hint": "文章标题或摘要中包含列表中任意一个词则【直接屏蔽】。"
            },
            "categories": {
                "description": "包含分类(Tags)",
                "type": "list",
                "hint": "只看这些分类的文章。如 'Unreal Engine'。"
            },
            "exclude_categories": {
                "description": "排除分类(Tags)",
                "type": "list",
                "hint": "不看这些分类。如 'AI', 'Crypto'。"
            }
        }
    }
}
